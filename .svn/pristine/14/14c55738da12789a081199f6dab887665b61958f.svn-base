<?php
	include '../php/restRequest.php';

	if (isset($_REQUEST['state'])) {
		$state = $_REQUEST['state'];
	} 
	
	$districts = getRequest($urlServices . 'districts/?state=' . replace($state));
	
	if (isset($_REQUEST['sport'])) {
		$sport = $_REQUEST['sport'];
	} 
	
	$grounds = getRequest($urlServices . 'grounds/' . replace($sport));
	
	if (isset($_REQUEST['district'])) {
		$district = empty($_REQUEST['district']) ? $districts[0]->{"name"} : $_REQUEST['district'];
	} else {
		$district = $districts[0]->{"name"};
	}
	
	if (isset($_REQUEST['ground'])) {	
		$ground = empty($_REQUEST['ground']) ? $grounds[0]->{"text"} : $_REQUEST['ground'];
	} else {
		$ground = $grounds[0]->{"text"};
	}
	
	if (isset($_REQUEST['hour'])) {
		$hour = empty($_REQUEST['ground'])  ? "HORA" : $_REQUEST['hour'];
	} else {
		$hour = "12:00";
	}
	
	if (isset($_REQUEST['day'])) {
		$day = empty($_REQUEST['day'])  ? "DÍA" : $_REQUEST['day'];
	} else {
		$day = "DÍA";
	}
?>
<ul>
	<li>
		<?php
			echo '<a href="" class="icon icon-bar-chart" style="color: #FFF"><span>' . $district . '</span></a>';
			echo '<ul>';
				foreach ($districts as $districtIT) {
					echo '<li><a href="" onclick="$.loadMainFilter({state:\'' . $state . '\', district:\'' . $districtIT->{"name"} . '\', sport: \'' . $sport  . '\', ground: \'' . $ground  . '\', hour: \'' . $hour . '\'}); ">' . $districtIT->{"name"} . '</a></li>';
				}
			echo '</ul>';
		?>
	</li>
	<li>
		<?php
			echo '<a href="" class="icon icon-bar-chart" style="color: #FFF"><span>' . $sport . '</span></a>';
		?>
	</li>
	<li>
		<?php
			echo '<a href="" class="icon icon-bar-chart" style="color: #FFF"><span>' . $ground . '</span></a>';
			echo '<ul>';
				foreach ($grounds as $groundIT) {
					echo '<li><a href="" onclick="$.loadMainFilter({state:\'' . $state . '\', district:\'' . $district . '\', sport: \'' . $sport  . '\', ground: \'' . $groundIT->{"text"}  . '\', hour: \'' . $hour . '\'}); ">' . $groundIT->{"text"} . '</a></li>';
				}
			echo '</ul>';
		?>
	</li>
	<li>
		<?php
			echo '<a href="" class="icon icon-bar-chart" style="color: #FFF"><span>' . $hour . '</span></a>';
			echo '<ul>';
				for ($hourIT = 0; $hourIT <= 24; $hourIT++) {
					echo '<li><a href="" onclick="$.loadMainFilter({state:\'' . $state . '\', district:\'' . $district . '\', sport: \'' . $sport  . '\', ground: \'' . $ground  . '\', hour: \'' . $hourIT . ':00\'}); ">' . $hourIT . ':00</a></li>';
					if ($hourIT == 24) break;
					echo '<li><a href="" onclick="$.loadMainFilter({state:\'' . $state . '\', district:\'' . $district . '\', sport: \'' . $sport  . '\', ground: \'' . $ground  . '\', hour: \'' . $hourIT . ':30\'}); ">' . $hourIT . ':30</a></li>';
				}
			echo '</ul>';
		?>
	</li>
	<li>
		<?php
			echo '<a href="" class="icon icon-bar-chart" style="color: #FFF"><span>' . $day  . '</span></a>';
			echo '<ul>';
			echo 	'<li></li>';
			echo '</ul>';
		?>
	</li>
</ul>
