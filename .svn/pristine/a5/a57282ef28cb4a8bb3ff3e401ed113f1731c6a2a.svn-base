<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="ar.com.finit.core.model.impl.PlayerImpl" table="PLAYER">
    
        <id name="id" type="java.lang.String">
			<column name="ID" />
			<generator class="ar.com.finit.core.generator.UUIDGenerator" />
		</id>
        <property name="mail" type="java.lang.String">
            <column name="MAIL" />
        </property>
         
        <property name="name" type="java.lang.String">
            <column name="NAME" />
        </property>

		<many-to-one name="requestedBooks" column="REQUESTED_BOOKS" class="ar.com.finit.core.model.impl.BookImpl" cascade="save-update" lazy="false" />

    </class>
</hibernate-mapping>
