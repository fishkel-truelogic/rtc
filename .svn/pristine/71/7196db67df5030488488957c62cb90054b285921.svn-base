package ar.com.finit.service.model.converter;

import java.util.Collection;
import java.util.HashSet;

import org.springframework.beans.factory.annotation.Autowired;

import ar.com.finit.core.model.User;
import ar.com.finit.core.model.dao.RoleDao;
import ar.com.finit.core.model.dao.UserDao;
import ar.com.finit.core.model.impl.UserImpl;
import ar.com.finit.dto.model.UserDTO;

/**
 * @author leo
 */
public class UserConverter {

	@Autowired
	private RoleDao roleDao;
	@Autowired
	private UserDao userDao;
	@Autowired
	private RoleConverter roleConverter;

	public Collection<UserDTO> toDTO(Collection<User> users, boolean lazy) {
		Collection<UserDTO> dtos = new HashSet<UserDTO>();
		for (User user : users) {
			dtos.add(this.toDTO(user, lazy));
		}
		return dtos;
	}

	public UserDTO toDTO(User user) {
		return this.toDTO(user, true);
	}

	public UserDTO toDTO(User user, boolean lazy) {
		if (user == null) {
			return null;
		}
		UserDTO dto = new UserDTO();
		if (!lazy) {
			user = this.userDao.initialize(user);
			dto.setRoles(roleConverter.toDTO(user.getRoles()));
		}
		dto.setId(user.getId());
		dto.setUsername(user.getUsername());
		dto.setPassword(user.getPassword());
		return dto;
	}

	public User toEntity(UserDTO userDto) {
		UserImpl user = new UserImpl();
		user.setId(userDto.getId());
		user.setUsername(userDto.getUsername());
		user.setPassword(userDto.getPassword());
		if (userDto.getRoles() == null && userDto.getUrlRoles() != null) {
			user.setRoles(roleDao.findByUser(user));
		} else {
			user.setRoles(roleConverter.toEntity(userDto.getRoles()));
		}
		return user;
	}
}