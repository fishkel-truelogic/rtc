package ar.com.finit.owner.web.controller;

import java.util.HashMap;
import java.util.Map;

import org.springframework.stereotype.Controller;
import org.springframework.validation.BindingResult;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.servlet.ModelAndView;

import ar.com.finit.dto.model.FieldDTO;

/**
 * @author leo
 */

@Controller
@RequestMapping("/fields")
public class FieldController {

	@RequestMapping({"/" , ""})
	public ModelAndView fields() {
		Map<String, Object> params = new HashMap<String, Object>();
		return new ModelAndView("fields", params);
	}

	@RequestMapping(value = {"/" , ""}, method = RequestMethod.POST)
	public ModelAndView createOrUpdate(@ModelAttribute("field") FieldDTO field, BindingResult result){
		if (field.getId() == null) return this.create(field);
		return this.update(field);
	}
	

	@RequestMapping("/new")
	public ModelAndView stablishment() {
		Map<String, Object> params = new HashMap<String, Object>();
		return new ModelAndView("create/field", params);
	}
	
	
	private ModelAndView update(FieldDTO field) {
		return this.fields();
	}
	
	private ModelAndView create(FieldDTO field) {
		return this.fields();
	}

}